<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit View Tree untuk Account Invoice Report -->
        <record id="account_invoice_report_view_tree_inherited" model="ir.ui.view">
            <field name="name">account.invoice.report.view.tree.inherited</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="account_invoice_report_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='invoice_user_id']" position="after">
                  <field name="employee_id" string="Salesman" optional="hide" widget="many2one_avatar_user"/> 
                </xpath>
            </field>
        </record>

        <!-- Inherit Filter Custom untuk Employee -->
        <record id="filter_invoice_report_salesman_inherited" model="ir.filters">
            <field name="name">By Salesman Inherited</field>
            <field name="model_id">account.invoice.report</field>
            <field name="inherit_id" ref="filter_invoice_report_salesman"/>
            <field name="domain">[]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['invoice_date:month', 'employee_id']}</field>
        </record>

        <!-- Inherit Search View -->
        <record id="view_account_invoice_report_search_inherited" model="ir.ui.view">
            <field name="name">account.invoice.report.search.inherited</field>
            <field name="model">account.invoice.report</field>
            <field name="inherit_id" ref="view_account_invoice_report_search"/>
            <field name="arch" type="xml">
                <search string="Invoices Analysis">
                    <field name="employee_id" string="Salesman"/> <!-- Tambahkan Field di Pencarian -->
                    <group expand="1" string="Group By">
                        <filter string="Salesman" name='group_by_employee' context="{'group_by':'employee_id'}"/> 
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>